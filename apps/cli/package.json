{
  "name": "pcu",
  "version": "1.1.0",
  "description": "CLI application for pnpm-catalog-updates",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "pcu": "./bin/pcu.js",
    "pnpm-catalog-updates": "./bin/pcu.js"
  },
  "files": [
    "dist",
    "bin",
    "src",
    "README.md"
  ],
  "scripts": {
    "build": "tsup && pnpm run build:bin",
    "build:bin": "node ../../scripts/build-bin.js",
    "build:watch": "tsup --watch",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest --run --passWithNoTests",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --run --coverage --passWithNoTests",
    "test:e2e": "vitest --run tests/e2e",
    "check": "biome check src",
    "check:fix": "biome check --write src",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist bin/*.js"
  },
  "dependencies": {
    "@clack/prompts": "catalog:",
    "@inquirer/core": "catalog:",
    "@pcu/core": "workspace:*",
    "@pcu/utils": "workspace:*",
    "boxen": "catalog:",
    "chalk": "catalog:",
    "cli-table3": "catalog:",
    "commander": "catalog:",
    "fs-extra": "catalog:",
    "glob": "catalog:",
    "inquirer": "catalog:",
    "lodash": "catalog:",
    "npm-registry-fetch": "catalog:",
    "ora": "catalog:",
    "pacote": "catalog:",
    "rxjs": "catalog:",
    "semver": "catalog:",
    "yaml": "catalog:"
  },
  "devDependencies": {
    "@types/inquirer": "catalog:",
    "@types/node": "catalog:node20",
    "@vitest/coverage-v8": "catalog:",
    "@vitest/ui": "catalog:",
    "fs-extra": "catalog:",
    "msw": "catalog:",
    "prettier": "catalog:",
    "rimraf": "catalog:",
    "tsup": "catalog:",
    "tsx": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  },
  "keywords": [
    "pnpm",
    "catalog",
    "cli"
  ],
  "author": {
    "name": "Evan Hu",
    "email": "evan@yldm.tech"
  },
  "license": "MIT",
  "homepage": "https://pcu-cli.dev",
  "repository": {
    "type": "git",
    "url": "https://github.com/houko/pnpm-catalog-updates.git",
    "directory": "apps/cli"
  },
  "peerDependencies": {},
  "optionalDependencies": {}
}
