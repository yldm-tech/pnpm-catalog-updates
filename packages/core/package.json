{
  "name": "@pcu/core",
  "private": true,
  "description": "Core domain logic and services for pnpm-catalog-updates",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup",
    "build:watch": "tsup --watch",
    "dev": "tsup --watch",
    "test": "vitest --run --passWithNoTests",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --run --coverage --passWithNoTests",
    "check": "biome check src",
    "check:fix": "biome check --write src",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@pcu/utils": "workspace:*",
    "fs-extra": "catalog:",
    "glob": "catalog:",
    "lodash": "catalog:",
    "npm-registry-fetch": "catalog:",
    "pacote": "catalog:",
    "semver": "catalog:",
    "yaml": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@types/fs-extra": "catalog:",
    "@types/lodash": "catalog:",
    "@types/node": "catalog:node20",
    "@types/npm-registry-fetch": "catalog:",
    "@types/pacote": "catalog:",
    "@types/semver": "catalog:",
    "@vitest/coverage-v8": "catalog:",
    "@vitest/ui": "catalog:",
    "msw": "catalog:",
    "prettier": "catalog:",
    "rimraf": "catalog:",
    "tsup": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  },
  "keywords": [
    "pnpm",
    "catalog",
    "core",
    "domain"
  ],
  "author": {
    "name": "Evan Hu",
    "email": "evan@yldm.tech"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/houko/pnpm-catalog-updates.git",
    "directory": "packages/core"
  },
  "peerDependencies": {},
  "optionalDependencies": {}
}
