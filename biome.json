{
  "$schema": "https://biomejs.dev/schemas/2.3.10/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": true,
    "includes": [
      "**",
      "!**/node_modules",
      "!**/dist",
      "!**/bin",
      "!**/coverage",
      "!**/.next",
      "!**/.turbo",
      "!**/*.d.ts",
      "!**/.pnpm-store",
      "!**/pnpm-lock.yaml",
      "!**/*.css"
    ]
  },
  "assist": { "actions": { "source": { "organizeImports": "on" } } },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100,
    "lineEnding": "lf"
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingCommas": "es5",
      "semicolons": "asNeeded",
      "arrowParentheses": "always",
      "bracketSpacing": true,
      "bracketSameLine": false,
      "quoteProperties": "asNeeded"
    }
  },
  "json": {
    "formatter": {
      "indentWidth": 2,
      "lineWidth": 80
    }
  },
  "css": {
    "parser": {
      "cssModules": true
    },
    "linter": {
      "enabled": false
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedVariables": "off",
        "noUnusedImports": "warn"
      },
      "suspicious": {
        "noExplicitAny": "warn",
        "noArrayIndexKey": "off",
        "noControlCharactersInRegex": "off",
        "noShadowRestrictedNames": "off",
        "useIterableCallbackReturn": "off",
        "useAdjacentOverloadSignatures": "off"
      },
      "style": {
        "noNonNullAssertion": "off",
        "useConst": "error"
      },
      "a11y": {
        "useKeyWithClickEvents": "off",
        "noSvgWithoutTitle": "off",
        "noStaticElementInteractions": "off",
        "useButtonType": "off"
      },
      "complexity": {
        "noStaticOnlyClass": "off",
        "noBannedTypes": "off"
      }
    }
  },
  "overrides": [
    {
      "includes": [
        "apps/docs/**/*.tsx",
        "apps/docs/**/*.jsx",
        "apps/docs/**/*.ts",
        "apps/docs/**/*.js"
      ],
      "javascript": {
        "formatter": {
          "semicolons": "asNeeded"
        }
      }
    }
  ]
}
